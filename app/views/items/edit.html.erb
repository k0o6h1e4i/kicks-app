<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <strong class="is-size-1" style="font-family: arial black;">Edit</strong>
    </div>
  </div>
</section>

<% if @item.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@item.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @item do |f| %>
          <div class="field">
            <%= f.label :title, "アイテム名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "詳細", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.file_field :image, id:"item-image" %>
          </div>

          <%= f.submit '更新', class: "button is-success" %>
          <button type="reset" class="btn btn-danger" onclick="return confirm('本当にリセットしてもよろしいですか？')">リセット</button>
          <div id="image-list"></div>
        <% end %>
      </div>
    </div>
  </div>
</section>